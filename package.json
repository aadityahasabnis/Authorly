{
  "name": "authorly-editor",
  "version": "0.1.14",
  "description": "A rich text editor for authors, blogs, and documentation with clean, publish-ready output.",
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org"
  },
  "main": "dist/index.cjs.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "sideEffects": [
    "*.css"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.esm.js",
      "require": "./dist/index.cjs.js"
    },
    "./styles": "./dist/authorly.css",
    "./styles.css": "./dist/authorly.css",
    "./package.json": "./package.json"
  },
  "files": [
    "dist/index.cjs.js",
    "dist/index.esm.js",
    "dist/index.d.ts",
    "dist/authorly.css",
    "dist/src/**/*.d.ts",
    "README.md",
    "CHANGELOG.md",
    "LICENSE"
  ],
  "scripts": {
    "dev": "vite",
    "build": "vite build --mode lib",
    "build:cdn": "vite build --mode cdn",
    "preview": "vite preview",
    "lint": "eslint src --ext ts,tsx",
    "test": "vitest",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "npm run build",
    "publish:github": "npm pkg set name=@aadityahasabnis/authorly && npm pkg set publishConfig.registry=https://npm.pkg.github.com && npm version patch && npm publish && npm pkg set name=authorly-editor && npm pkg set publishConfig.registry=https://registry.npmjs.org",
    "publish:npm": "npm run build && npm publish --registry=https://registry.npmjs.org"
  },
  "peerDependencies": {
    "@excalidraw/excalidraw": "^0.18.0",
    "lucide-react": "^0.460.0",
    "react": ">=17.0.0 || ^19.0.0",
    "react-dom": ">=17.0.0 || ^19.0.0"
  },
  "pnpm": {
    "overrides": {
      "react": "^19.2.4",
      "react-dom": "^19.2.4"
    }
  },
  "devDependencies": {
    "@eslint/js": "^10.0.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@types/node": "^25.2.3",
    "@types/react": "^19.2.14",
    "@types/react-dom": "^19.2.3",
    "@typescript-eslint/eslint-plugin": "^8.55.0",
    "@typescript-eslint/parser": "^8.55.0",
    "@vitejs/plugin-react": "^5.1.4",
    "eslint": "^10.0.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "jsdom": "^28.1.0",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.55.0",
    "vite": "^7.3.1",
    "vite-plugin-dts": "^4.5.4",
    "vitest": "^4.0.18"
  },
  "keywords": [
    "rich-text-editor",
    "react-editor",
    "wysiwyg",
    "blog-editor",
    "content-editor",
    "react",
    "html-editor",
    "publishing",
    "documentation",
    "markdown-alternative"
  ],
  "author": "Aaditya Hasabnis",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/aadityahasabnis/Authorly.git"
  }
}
